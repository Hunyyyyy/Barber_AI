{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Debug Next.js",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Local:.[](http://localhost:\\d+)",
        "uriFormat": "http://localhost:3000"
      }
    }
  ]
}